{# src/Knarf/PlatformBundle/Resources/views/Advert/delete.html.twig #}

{% extends "KnarfPlatformBundle::layout.html.twig" %}

{% block title %}
  {{ parent() }} | Supprimer un article
{% endblock %}

{% block knarfplatform_body %}
    
    {{ parent() }}
  <p>
    Etes-vous certain de vouloir supprimer l'article: "{{ advert.title }}" ?
  </p>

  {# On met l'id de l'annonce dans la route de l'action du formulaire #}
  <form action="{{ path('knarf_admin_delete', {'slug': advert.slug}) }}" method="post">
    <a href="{{ path('knarf_admin_view', {'slug': advert.slug}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour à l'article
    </a>
    {# Ici j'ai écrit le bouton de soumission à la main #}
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    {# Ceci va générer le champ CSRF #}
    {{ form_rest(form) }}
  </form>

{% endblock %}
