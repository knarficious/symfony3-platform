{# src/Knarf/PlatformBundle/Resources/views/Advert/edit_form.html.twig #}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

<div class="container-fluid">
    
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

        {# Les erreurs générales du formulaire. #}
        {{ form_errors(form) }}


        <div class="form-group">
            {{ form_label(form.rubrique, "Rubrique de l'annonce", {'label_attr': {'class': 'control-label'}}) }}
            {{ form_errors(form.rubrique) }}       
            {{ form_widget(form.rubrique, {'attr': {'class': 'form-control'}}) }}

        </div>

        <div class="form-group">            
            {{ form_label(form.title, "Titre de l'annonce", {'label_attr': {'class': 'control-label'}}) }}
            {{ form_errors(form.title) }}

            
                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
            
        </div>

        <div class="form-group">
            {{ form_label(form.mediaFile, "Media de l'annonce", {'label_attr': {'class': 'media-heading  control-label'}}) }}
            {{ form_errors(form.mediaFile) }}
            {% if advert.nomMedia is not empty %}
                    <img class="img-responsive media-object" src="{{vich_uploader_asset(advert, 'mediaFile') }}" alt="{{ advert.nomMedia }}"/>
                
            
                <div class="col-sm-8">
                {{ form_widget(form.mediaFile.delete) }}
                </div>
            {% endif %}
            
            <p>
            <hr>
            <p>
            <div class="col-sm-10">
                {{ form_widget(form.mediaFile) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.content, "Contenu de l'annonce", {'label_attr': {'class': 'control-label'}}) }}
            {{ form_errors(form.content) }}
            
                {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
            
        </div>   

        <div class="form-group">
            {{ form_widget(form.published, {'attr': {'class': 'col-sm-offset-2 col-sm-4'}}) }}
        </div>
        
        <a href="{{ path('profile') }}" class="btn btn-default" >
        <i class="glyphicon glyphicon-chevron-left"></i>
        Annuler
        </a>    

        {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
        {{ form_widget(form.enregistrer, {'attr': {'class': 'btn btn-primary'}}) }}
        {{ form_widget(form.effacer, {'attr': {'class': 'btn btn-danger'}}) }}

        {# Génération automatique des champs pas encore écrits.
        Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
        et tous les champs cachés (type « hidden »). #}
        {{ form_rest(form) }} 

    {# Fermeture de la balise <form> du formulaire HTML #}
    {{ form_end(form) }}
  

</div>