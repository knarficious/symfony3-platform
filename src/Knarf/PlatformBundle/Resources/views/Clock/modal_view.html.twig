{# src/Knarf/PlatformBundle/Resources/views/Clock/modal_view.html.twig #}

{% block knarfplatform_body %}
    
<div class="modal fade" id="clocksModal" tabindex="-1" role="dialog" aria-labelledby="clocksModal" aria-hidden="true">
<div class="modal-dialog">
    <div class="modal-content" role="dialog">
        <div class="modal-header">
            <h5 class="modal-title" id="clocksModal">Horloges</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="demo-container clocks active bounce">    
              <article class="clock simple js-paris">
                <section class="label">Paris</section>
                <section class="hours-container">
                  <section class="hours"></section>
                </section>
                <section class="minutes-container">
                  <section class="minutes"></section>
                </section>
                <section class="seconds-container">
                  <section class="seconds"></section>
                </section>
              </article>
              <article class="clock simple js-lagos">
                <section class="label">Lagos</section>
                <section class="hours-container">
                  <section class="hours"></section>
                </section>
                <section class="minutes-container">
                  <section class="minutes"></section>
                </section>
                <section class="seconds-container">
                  <section class="seconds"></section>
                </section>
              </article>
              <article class="clock simple js-tokyo">
                <section class="label">Tokyo</section>
                <section class="hours-container">
                  <section class="hours"></section>
                </section>
                <section class="minutes-container">
                  <section class="minutes"></section>
                </section>
                <section class="seconds-container">
                  <section class="seconds"></section>
                </section>
              </article>                
             </div>
        </div>
    </div>
</div>
</div>

<br>
