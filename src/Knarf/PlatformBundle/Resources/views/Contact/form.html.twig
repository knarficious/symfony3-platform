{# src/Knarf/PlatformBundle/Resources/views/Contact/form.html.twig #}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

<div class="container-fluid">

    {{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="form-group">
        {{ form_label(form.nom, 'contact.nom' | trans) }}
        {{ form_errors(form.nom) }}
        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.courriel, 'contact.email' | trans) }}
        {{ form_errors(form.courriel) }}
        {{ form_widget(form.courriel, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.objet, 'contact.objet' | trans) }}
        {{ form_errors(form.objet) }}
        {{ form_widget(form.objet, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.message, 'contact.contenu' | trans) }}
        {{ form_errors(form.message) }}
        {{ form_widget(form.message, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class='form-group'>
        <div class="col-sm-2">
            <div class="col-sm-10">

                {{ form_widget(form.envoyer, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>
        </div> 

    </div>


    {{ form_rest(form) }}
    {{ form_end(form) }}
</div>
