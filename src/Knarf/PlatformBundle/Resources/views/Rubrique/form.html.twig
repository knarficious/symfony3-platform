{# src/Knarf/PlatformBundle/Resources/views/Rubrique/form.html.twig #}


<div class="container-fluid">
  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
 
  {{ form_errors(form) }}
  
  <div class="form-group">
      {{ form_label(form.intitule, "Intitulé", {'label_attr': {'class': 'control-label'}}) }}
      {{ form_errors(form.intitule) }}
      {{ form_widget(form.intitule, {'attr': {'class': 'form-control'}}) }}
  </div>
  
  <div class="form-group">   
   {{ form_errors(form.mediaFile) }}
   {% if rubrique.image is not empty %}
       <img class="media-object" src="{{vich_uploader_asset(rubrique, 'mediaFile') }}" alt="{{ rubrique.image }}"/>
       {{ form_widget(form.mediaFile.delete) }}
       
    {% else %}
        {{ form_widget(form.mediaFile, {'attr': {'class': 'form-control'}}) }}
        
    {% endif %}
 
   </div>
  <p>
  <p>
  <p>
 
  <div class="form-group">
      <div class="col-sm-2">
          <div class="col-sm-10">
  
              {{ form_widget(form.enregistrer, {'attr': {'class': 'btn btn-primary'}}) }}
          </div>
      </div>          
  </div>

  {# Génération automatique des champs pas encore écrits.
     Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
     et tous les champs cachés (type « hidden »). #}
  {{ form_rest(form) }}

  {# Fermeture de la balise <form> du formulaire HTML #}
  {{ form_end(form) }}
</div>