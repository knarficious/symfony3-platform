{# src/Knarf/PlatformBundle/Resources/view/Rubrique/view.html.twig #}

{% extends "KnarfPlatformBundle::layout.html.twig" %}

{% block title %}
  Lecture d'une rubrique - {{ parent() }}
{% endblock %}

{% block knarfplatform_body %}

  <h2>{{ rubrique.intitule }}</h2>

  {% if rubrique.adverts is not empty %}
  <ul class="well">
      
      {% for entity in rubrique.adverts %}
        <li class="article-rubrique">
            <a href="{{ path('knarf_platform_view', { 'id': entity.id }) }}">{{ entity.title }}</a>
	</li>
      {% endfor %}
          
  </ul>
  {% else %}
          Il n'y a pas d'annonce dans cette rubrique
      {% endif %}    

  <div class="row">
      
    <a href="{{ path('rubrique_home') }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour Ã  la liste des rubriques
    </a>
      
    {% if is_granted('ROLE_ADMIN') %}
        
    <a href="{{ path('rubrique_edit', {'id': rubrique.id}) }}" class="btn btn-default">
        <i class="glyphicon glyphicon-edit"></i>
        Modifier la rubrique
    </a>
        
    <a href="{{ path('rubrique_delete', {'id': rubrique.id}) }}" class="btn btn-danger">
        <i class="glyphicon glyphicon-trash"></i>
        Supprimer la rubrique
    </a>
      
    {% endif %}  

  </div>

{% endblock %}
