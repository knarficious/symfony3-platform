{% extends '::layout.html.twig' %}

{% block title %}
    Profil
{% endblock %}

{% block body %}

<div class="row">
    <h3>Yo! {{ user.username }}</h3>
    
</div>

<div class="row">
    {% if  user.nomMedia is not empty %}
        <img src="{{vich_uploader_asset(user, 'mediaFile') | imagine_filter('my_thumb') }}" alt="{{ user.nomMedia }}"  />
    {% endif %}
</div>

{{ form_start(form) }}
    {{ form_row(form.email) }}
    {{ form_row(form.mediaFile) }}

    <button type="submit">Enregistrer</button>
{{ form_end(form) }}
    <a href="{{ path('profile') }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour Ã  mon profil
    </a>
{% endblock %}