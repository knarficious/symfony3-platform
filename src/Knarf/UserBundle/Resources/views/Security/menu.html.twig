<div class="container-fluid">
    
    <h3>Membres </h3>

    {% for user in listUsers |sort%}
      
      {% if user.isActive == 1 %}

        <div class="media">
        <div class="media-left">  
        {% if user.avatar is not empty %}
        <img class="media-object" src="{{vich_uploader_asset(user.avatar, 'mediaFile') | imagine_filter('my_thumb') }}" alt=""  />
        {% else %}
        {% image '@KnarfUserBundle/Resources/public/images/if_icon-person_211874.png' %}
        <img class="media-object" src="{{ asset_url }}" alt="" />
        {% endimage %}
        {% endif %}
        </div>
        <div class="media-body">
            <h4 class="media-heading">
                {% if user is same as( app.user) %}
                    <a href="{{ path('profile') }}">{{ user.username }}</a>                    
                {% else %}    
                    <a href="{{ path('profile_view', {'slug': user.slug}) }}">{{ user.username }}</a>
                {% endif %}
            </h4>
        </div>     
         
        </div>
        {% endif %}

  {% endfor %}
</div>


