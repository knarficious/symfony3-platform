<div class="container-fluid">
    
    <h3>Membres </h3>

    {% for user in listUsers |sort%}
      
      {% if user.isActive == 1 %}

        <div class="media">
            
            <div class="media-left">
                
                {% if user.avatar is not empty %}
                    
                    <img class="media-object" src="{{vich_uploader_asset(user.avatar, 'mediaFile') | imagine_filter('my_thumb') |replace({'http://':'https://'}) }}" alt="mythumb"  />
                
                {% else %}
                    
                    <img src="{{ asset('/images/icon-person_211874.png') }}" alt="icon person" />

                {% endif %}
        </div>
        <div class="media-body">
            <h4 class="media-heading">
                {% if user is same as( app.user) %}
                    <a href="{{ path('profile') }}">{{ user.username }}</a>                    
                {% else %}    
                    <a href="{{ path('profile_view', {'slug': user.slug}) }}">{{ user.username }}</a>
                {% endif %}
            </h4>
        </div>     
         
        </div>
        {% endif %}

  {% endfor %}
</div>


